---
// Password reset request page
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password - FPL Manager Data</title>
</head>
<body>
  <div style="max-width: 400px; margin: 100px auto; padding: 2em; border: 1px solid #e2e8f0; border-radius: 8px; background: white;">
    <h1 style="text-align: center; color: #2d3748;">Reset Password</h1>
    <p style="text-align: center; color: #718096; margin-bottom: 2em;">Enter your email address and we'll send you a link to reset your password.</p>
    
    <form id="reset-form">
      <div style="margin-bottom: 1em;">
        <label for="email" style="display: block; margin-bottom: 0.5em; font-weight: bold;">Email:</label>
        <input type="email" id="email" required style="width: 100%; padding: 8px; border: 1px solid #cbd5e0; border-radius: 4px; font-size: 14px;">
      </div>
      
      <button type="submit" style="width: 100%; padding: 10px; background: #3182ce; color: white; border: none; border-radius: 4px; font-size: 16px; font-weight: bold; cursor: pointer;">
        Send Reset Link
      </button>
      
      <div id="error-message" style="margin-top: 1em; color: #e53e3e; display: none;"></div>
      <div id="success-message" style="margin-top: 1em; color: #38a169; display: none;"></div>
    </form>
    
    <div style="margin-top: 1.5em; text-align: center;">
      <a href="/login" style="color: #3182ce; text-decoration: none;">Back to Login</a>
    </div>
  </div>

  <script>
    import { createClient } from '@supabase/supabase-js'

    const supabase = createClient(
      'https://fnehvaoqqmkrhxcqslta.supabase.co',
      'sb_publishable_MWe6etLwK0ONF0hbSJX4fA_pqxUcXLK'
    )

    const form = document.getElementById('reset-form')
    const errorMessage = document.getElementById('error-message')
    const successMessage = document.getElementById('success-message')

    form.addEventListener('submit', async (e) => {
      e.preventDefault()
      
      errorMessage.style.display = 'none'
      successMessage.style.display = 'none'
      
      const email = document.getElementById('email').value
      
      const { data, error } = await supabase.auth.resetPasswordForEmail(email, {
        redirectTo: `${window.location.origin}/update-password`,
      })
      
      if (error) {
        errorMessage.textContent = error.message
        errorMessage.style.display = 'block'
      } else {
        successMessage.textContent = 'Password reset link sent! Check your email.'
        successMessage.style.display = 'block'
        form.reset()
      }
    })
  </script>

  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background: #f7fafc;
      margin: 0;
      padding: 0;
    }
    
    input:focus {
      outline: none;
      border-color: #3182ce;
    }
    
    button:hover {
      background: #2c5aa0;
    }
    
    a:hover {
      text-decoration: underline;
    }
  </style>
</body>
</html>