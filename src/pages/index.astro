---
const baseApi = "/api/manager.json";
---

<html>
  <head>
    <title>Test Manager Lookup</title>
  </head>
  <body>
    <form id="lookup-form">
      <input type="text" id="manager-id" placeholder="Manager ID" required />
      <button type="submit">Fetch</button>
    </form>
    <div id="output"></div>
    <script>
      document.getElementById('lookup-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const id = document.getElementById('manager-id').value.trim();
        if (!id) return;
        document.getElementById('output').textContent = 'Loading...';
        try {
          const resp = await fetch(`${baseApi}?id=${id}`);
          const data = await resp.json();
          if (!resp.ok) throw new Error(data.error || 'Error');
          document.getElementById('output').textContent = JSON.stringify(data, null, 2);
        } catch (err) {
          document.getElementById('output').textContent = err.message;
        }
      });
    </script>
  </body>
</html>
